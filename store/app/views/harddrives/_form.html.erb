<%= form_for @harddrive do |x| %>
  <h3> Add a Hard Drive: </h3>
  <div style="margin-left:30px:">
    <div class="field">
      <%= x.label :name %>
      <%= x.text_field :name %>
    </div>
  </div>
  <div class="actions">
    <%= x.submit "Add Hard Drive to list", :class=>"btn btn-danger" %>
  </div>
<% end %>
